---
interface Props {
  title: string
  reverse: boolean
}

const { title, reverse } = Astro.props;
---

<style>
  h2::after {
    content: attr(data-content);
  }
</style>

<div class:list={["flex flex-row gap-2 items-center", reverse && "flex-row-reverse"]}>
  <span class="w-10 h-1 bg-secondary opacity-60 rounded"/>
  <h2 data-content={title} class="relative text-4xl font-semibold font-oswald text-secondary 
   after:text-primary after:absolute after:left-1 after:top-1 after:-z-10">
    {title}
  </h2>
  <span class="w-[60%] h-1 bg-secondary opacity-60 rounded"/>
</div>
